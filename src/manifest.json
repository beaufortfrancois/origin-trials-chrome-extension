{
  "name": "Origin Trials",
  "description": "Show an icon in the address bar when it detects an Origin Trials token.",
  "version": "0.1",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["origin-trials.js"],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },
  "manifest_version": 2
}